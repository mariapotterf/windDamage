journal = {Ecological Modelling},
keywords = {Ash trees (Fraxinus spp.),Cellular automata,Dynamic modeling,Emerald ash borer (Agrilus planipennis),Invasive species,Spatial dispersion,Spatial modeling,Spatially explicit modeling},
number = {1-2},
pages = {221--236},
title = {{Modeling the spread of the Emerald Ash Borer}},
volume = {197},
