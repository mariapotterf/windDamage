@article{Carroll2006,
abstract = {Mountain pine beetles [MPB, Dendroctonus ponderosae (Hopkins)] normally exist as endemic populations that are characteristically scattered and restricted to suppressed and/or damaged pine trees which they colonize in association with an assemblage of secondary bark beetle species. We conducted a 4-year study (involving 7 stands at 2 sites in southern British Columbia) to 1) characterize the secondary bark beetle assemblage directly associated with endemic MPB populations; 2) determine the potential for secondary beetles to limit endemic MPB populations; 3) quantify the characteristics of lodgepole pine trees that mediate attack by the bole-infesting bark beetle guild; and 4) determine the critical temporal and spatial changes in trophic interactions that facilitate the transition of MPB populations from endemic to incipient-epidemic states. The secondary bole-infesting bark beetle assemblage comprised nine species that were consistent in their relative abundance from year to year in each stand, infesting up to 20 trees per ha in any given year. Within the secondary bark beetle assemblage, endemic MPB populations comprised fewer than 40 attacking female beetles distributed within ≤2 trees per ha. Endemic MPB preferentially colonized small, vigour-impaired trees with previous non-lethal infestations by one or more secondary bark beetle species. The volume of phloem consumed by MPB increased with increasing secondary activity suggesting that endemic MPB may benefit from their association with secondary beetles. During the course of the investigation, 4 of 7 stands experienced MPB population eruptions. In each case, eruptions were preceded by one or two years of elevated secondary bark beetle activity associated with an unusual drought period, suggesting that stress-induced increases in the abundance of secondary beetles within stands may facilitate MPB eruptions. The transition from endemic to incipient-epidemic populations was characterized by a density-dependent shift in colonization behaviour. As populations increased they rapidly shifted from small-diameter, widely dispersed, vigour-impaired trees with previous infestations by secondary bark beetles to clusters of large-diameter, vigorous, intact trees. The threshold density for the shift in colonization behaviour was estimated as 300-500 attacking female beetles per ha. The eruptive dynamics of mountain pine beetle arise as a consequence of interactions with bole-infesting secondary bark beetles that facilitate the maintenance of an endemic population. Eruptions occur when exogenous stress events (i.e. drought, windthrow, pathogens) increase the availability of vigour-impaired host trees within mature pine stands that enable the endemic MPB populations, maintained through the activities of the secondary beetle assemblage, to build sufficiently to access healthy, large-diameter trees.},
author = {Carroll, Allan L. and Aukema, Brian H. and Raffa, Kenneth F. and Linton, D. A. and Smith, Gregory D. and Lindgren, Staffan B.},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Carroll et al. - 2006 - Mountain pine beetle outbreak development the endemic - incipient epidemic transition.pdf:pdf},
keywords = {endemic-incipient epidemic transition,interspecific competition,population dynamics,population eruption,secondary bark beetle assemblage},
number = {September},
pages = {27},
title = {{Mountain pine beetle outbreak development: the endemic - incipient epidemic transition}},
year = {2006}
}
