file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/2) 7 April (Eyvindson) Bāders2020{\_}Long-termEffectsOfSalvageLoggi.pdf:pdf},
isbn = {0123456789},
issn = {16124677},
journal = {European Journal of Forest Research},
keywords = {Diameter distribution,Picea abies,Post-disturbance management,Regeneration,Stand-replacing windthrow},
