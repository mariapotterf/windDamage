isbn = {0838980813},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {biodiversity,conservation,ecological indicators,ecological processes,even-aged silviculture,spatial scale,timescale,uneven-aged silviculture},
number = {2},
