isbn = {0378-1127},
issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {Bark beetles,Fire behavior,Forest disturbances,Fuels,Wildfire},
pages = {81--90},
publisher = {Elsevier B.V.},
title = {{Effects of bark beetle-caused tree mortality on wildfire}},
