@article{Coates2018,
abstract = {In Canada and elsewhere, logging practices in natural-origin forests
have shifted toward retention systems where variable levels of mature
trees are retained post-logging to promote a diversity of values. We
examine multiple sites that experienced a wide range of prior harvest
