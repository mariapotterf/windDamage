issn = {0006-3207},
journal = {Biological Conservation},
month = {apr},
pages = {8--27},
publisher = {Elsevier},
title = {{Worldwide decline of the entomofauna: A review of its drivers}},
url = {https://www.sciencedirect.com/science/article/pii/S0006320718313636?via{\%}3Dihub},
