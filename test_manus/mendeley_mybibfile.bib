doi = {10.5194/esd-6-435-2015},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Nishina et al. - 2015 - Decomposing uncertainties in the future terrestrial carbon budget associated with emission scenarios, climate pr.pdf:pdf},
