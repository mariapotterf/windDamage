author = {Kulakowski, Dominik and Seidl, Rupert and Holeksa, Jan and Kuuluvainen, Timo and Nagel, Thomas A. and Panayotov, Momchil and Svoboda, Miroslav and Thorn, Simon and Vacchiano, Giorgio and Whitlock, Cathy and Wohlgemuth, Thomas and Bebi, Peter},
doi = {10.1016/j.foreco.2016.07.037},
