file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Neigh et al. - 2014 - An automated approach to map the history of forest disturbance from insect mortality and harvest with landsat time.pdf:pdf},
isbn = {1604822414},
issn = {20724292},
journal = {Remote Sensing},
keywords = {AVHRR,Classification,Decision tree,Disturbance,Forest,Harvest,Insect,Landsat,Mortality,US},
