issn = {21508925},
journal = {Ecosphere},
keywords = {Connectivity,Forest insect pest,Ips typographus,Landscape,Metapopulation,Nonhost volatiles,Norway spruce,Spatial dynamics},
number = {3},
pages = {1--14},
title = {{Local colonization-extinction dynamics of a tree-killing bark beetle during a large-scale outbreak}},
