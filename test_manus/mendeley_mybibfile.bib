journal = {Forest Science},
keywords = {Dendroctonus ponderosae,Direct control,Indirect control,Pinus contorta,Pinus ponderosa},
number = {3},
pages = {450--463},
title = {{Cultural practices for prevention and mitigation of mountain pine beetle infestations}},
volume = {60},
year = {2014}
}
