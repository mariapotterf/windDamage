doi = {10.1007/s10342-017-1031-x},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Wohlgemuth et al. - 2017 - Post-windthrow management in protection forests of the Swiss Alps.pdf:pdf},
issn = {16124669},
journal = {European Journal of Forest Research},
keywords = {Extreme events,Natural regeneration,Planting,Protection gap,Woody debris},
number = {5-6},
pages = {1029--1040},
publisher = {Springer Berlin Heidelberg},
title = {{Post-windthrow management in protection forests of the Swiss Alps}},
volume = {136},
year = {2017}
}
