file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Kraut, Liira, L{\~{o}}hmus - 2016 - Beyond a minimum substrate supply Sustaining saproxylic beetles in semi-natural forest management.pdf:pdf},
issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {Coarse woody debris,Ecological sustainability,Fine woody debris,Habitat threshold,Logging,Retention forestry},
pages = {9--19},
