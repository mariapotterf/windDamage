file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Griffiths et al. - 2013 - A Pixel-Based Landsat Compositing Algorithm for Large Area Land Cover Mapping.pdf:pdf},
