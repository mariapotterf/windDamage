author = {Curtis, Philip G and Slay, Christy M and Harris, Nancy L and Tyukavina, Alexandra and Hansen, Matthew C.},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Curtis et al. - Unknown - Classifying drivers of global forest loss.pdf:pdf},
title = {{Classifying drivers of global forest loss}},
url = {http://science.sciencemag.org/}
}
