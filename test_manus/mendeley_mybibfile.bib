file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Nuske, Sprauer, Saborowski - 2009 - Adapting the pair-correlation function for analysing the spatial distribution of canopy gaps.pdf:pdf},
