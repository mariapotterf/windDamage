doi = {10.1111/1365-2664.12511},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Seidl et al. - 2016 - Searching for resilience Addressing the impacts of changing disturbance regimes on forest ecosystem services(2).pdf:pdf;:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Seidl et al. - 2016 - Searching for resilience Addressing the impacts of changing disturbance regimes on forest ecosystem services(3).pdf:pdf},
