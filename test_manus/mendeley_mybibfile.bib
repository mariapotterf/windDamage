file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Haywood, Verbesselt, Baker - 2016 - Mapping disturbance dynamics in wet sclerophyll forests using time series Landsat.pdf:pdf},
issn = {16821750},
journal = {International Archives of the Photogrammetry, Remote Sensing and Spatial Information Sciences - ISPRS Archives},
keywords = {Central Highlands,Fire,Forest disturbance,Open-source,Random forests,Timber harvesting},
