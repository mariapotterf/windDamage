file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Thorn et al. - 2014 - New insights into the consequences of post-windthrow salvage logging revealed by functional structure of saproxyli.pdf:pdf},
