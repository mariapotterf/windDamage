doi = {10.1016/j.ecolind.2017.04.025},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Blattert et al. - 2017 - Management of ecosystem services in mountain forests Review of indicators and value functions for model based m.pdf:pdf},
