journal = {Mycological Progress},
keywords = {culture isolation,dna cloning,environmental,fungal diversity,ophiostomatoid fungi,sequencing},
month = {may},
title = {{Characterization of fungal communities associated with the bark beetle Ips typographus varies depending on detection method, location, and beetle population levels}},
