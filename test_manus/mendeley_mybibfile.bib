pmid = {83847700005},
title = {{Should the wind disturbance patterns observed in natural forests be mimicked in planted forests in the British uplands?}},
url = {http://forestry.oupjournals.org/cgi/doi/10.1093/forestry/72.4.337},
volume = {72},
