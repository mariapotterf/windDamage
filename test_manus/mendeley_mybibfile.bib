keywords = {AI,adjacency probability,aggregation index,contagion index,landscape indices,map resolution,measurement resolution,shape index,spatial pattern},
pages = {591--601},
title = {{An aggregation index (AI) to quantify spatial patterns of landscapes}},
volume = {15},
year = {2000}
}
@article{Nordstrom2015,
