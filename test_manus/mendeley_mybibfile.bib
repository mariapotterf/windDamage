journal = {Agricultural and Forest Entomology},
keywords = {engraver beetle,monitoring,pinus sylvestris,proliferation,sanitation cutting,spot,spot growth},
month = {feb},
number = {1},
pages = {34--42},
title = {{Spatio-temporal dynamics of an Ips acuminatus outbreak and implications for management}},
url = {http://doi.wiley.com/10.1111/j.1461-9563.2012.00589.x},
volume = {15},
year = {2013}
