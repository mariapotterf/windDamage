file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Morimoto et al. - 2019 - Long-term effects of salvage logging after a catastrophic wind disturbance on forest structure in northern Japa.pdf:pdf},
isbn = {0123456789},
issn = {1860188X},
journal = {Landscape and Ecological Engineering},
keywords = {Boreal forest,Ecological resilience,Light tolerance,Nursery bed,Regeneration,Windthrow},
number = {2},
pages = {133--141},
