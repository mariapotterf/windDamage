file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Clark, Jones, Holling - 1979 - Lessons for ecological policy design A case study of ecosystem management.pdf:pdf},
issn = {03043800},
journal = {Ecological Modelling},
