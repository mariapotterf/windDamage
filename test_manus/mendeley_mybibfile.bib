}
@article{Berryman1987,
abstract = {Bark beetles are among the few native insects that can kill large numbers of trees in a single year. The present paper reviews recent work on the relationship between conifer resistance to bark beetle attack and tree vigor, e.g. in terms of wood production per unit of foliage. Experimental studies in the Pacific Northwest and the southeast U.S.A., and in Norway, are drawn upon to show that tree resistance to attack may be closely related to the amount of current and stored photosynthate that is available for defense. An experimental approach is advocated to critically test the relationship between host-tree resistance and the limitations on the transfer of critical resources to the site of attack.},
