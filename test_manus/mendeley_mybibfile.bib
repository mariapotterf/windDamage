journal = {European Journal of Forest Research},
keywords = {Empirical modeling,Generalized linear mixed models,Long-term storm damage,Silviculture,Thinning,Windthrow},
number = {1},
pages = {229--247},
title = {{How does silviculture affect storm damage in forests of south-western Germany? Results from empirical modeling based on long-term observations}},
