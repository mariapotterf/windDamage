doi = {10.1111/ecog.02769},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Marini et al. - 2017 - Climate drivers of bark beetle outbreak dynamics in Norway spruce forests.pdf:pdf},
