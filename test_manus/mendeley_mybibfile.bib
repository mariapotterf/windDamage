journal = {Forestry Chronicle},
keywords = {Accuracy,Aerial overview survey,Detection,Heli-GPS,Insect,Landsat,Mitigation,Mountain pine beetle,QuickBird,Remote sensing,Survey},
number = {6},
pages = {900--909},
title = {{Linking survey detection accuracy with ability to mitigate populations of mountain pine beetle}},
volume = {84},
year = {2008}
}
