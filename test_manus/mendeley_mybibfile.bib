file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Einzmann et al. - 2017 - Windthrow detection in european forests with very high-resolution optical data.pdf:pdf},
isbn = {4314765485740},
