file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Marcinkowska et al. - 2014 - Mapping vegetation communities of the Karkonosze National Park using APEX hyperspectral data and Support Ve.pdf:pdf},
