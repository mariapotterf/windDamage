file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Lawson, Furuta, Katagiri - 2009 - Effect of natural enemy exclusion on mortality of Ips typographus japonicus Niijima (Col., Scolytid(3).pdf:pdf;:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Lawson, Furuta, Katagiri - 2009 - Effect of natural enemy exclusion on mortality of Ips typographus japonicus Niijima (Col., Scolytid(2).pdf:pdf},
