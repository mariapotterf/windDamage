issn = {03043800},
journal = {Ecological Modelling},
keywords = {Agent-based model,Forest insect outbreaks,High-performance computing,Insect dispersal,Mountain pine beetle},
pages = {45--58},
publisher = {Elsevier B.V.},
title = {{Modeling micro-scale ecological processes and emergent patterns of mountain pine beetle epidemics}},
