month = {jan},
number = {5},
pages = {e10516},
pmid = {20463895},
title = {{Spectral signature generalization and expansion can improve the accuracy of satellite image classification.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=2865537{\&}tool=pmcentrez{\&}rendertype=abstract},
volume = {5},
