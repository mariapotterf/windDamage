journal = {Forests},
keywords = {Hybrid change detection,Large-scale mean shift,OBIA,Random Forests,Remote sensing,Windthrow},
number = {1},
pages = {1--26},
title = {{Windthrow detection in european forests with very high-resolution optical data}},
