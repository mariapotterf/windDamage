keywords = {Bark beetles,Invasive species,Ips typographus,Nonhost volatiles,Pheromones,Picea abies,Urban ecology},
number = {2},
pages = {161--167},
title = {{Occurrence of Ips typographus (Col., Scolytidae) along an urbanization gradient in Brussels, Belgium}},
