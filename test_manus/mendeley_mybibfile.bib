doi = {10.1016/j.foreco.2008.04.002},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Seidl et al. - 2008 - Impact of bark beetle (Ips typographus L.) disturbance on timber production and carbon sequestration in different.pdf:pdf},
isbn = {0378-1127},
