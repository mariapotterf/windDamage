journal = {Forest Ecology and Management},
keywords = {Betula sp.,Damage,Forest management,Mixed stands,Picea abies,Pinus sylvestris,Risk modelling},
title = {{How does forest composition and structure affect the stability against wind and snow?}},
year = {2017}
