issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {attack spread distances,epidemic outbreaks,gis,ips typographus,spruce bark beetle,timing salvage harvests,windthrow},
number = {1-3},
pages = {31--39},
title = {{The spread of Ips typographus (L.) (Coleoptera, Scolytidae) attacks following heavy windthrow in Denmark, analysed using GIS}},
