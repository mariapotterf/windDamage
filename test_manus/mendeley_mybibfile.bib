file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Reino et al. - 2013 - Does local habitat fragmentation affect large-scale distributions The case of a specialist grassland bird.pdf:pdf},
issn = {13669516},
journal = {Diversity and Distributions},
keywords = {Distribution modelling,Ecological niche modelling,Edge effects,Grassland birds,Habitat fragmentation,Model selection},
