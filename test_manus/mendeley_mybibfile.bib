doi = {10.1016/j.foreco.2007.03.012},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Vanha-Majamaa et al. - Unknown - Rehabilitating boreal forest structure and species composition in Finland through logging, dead wood cr.pdf:pdf},
keywords = {Aspen,Beetles,Bryophytes,Epixylic vegetation,Forest structure,Invertebrates,Lichens,Soil nutrients,Understorey vegetation},
title = {{Rehabilitating boreal forest structure and species composition in Finland through logging, dead wood creation and fire: The EVO experiment}},
