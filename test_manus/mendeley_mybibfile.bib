doi = {10.5194/nhess-9-405-2009},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Fink et al. - 2009 - The European storm Kyrill in January 2007 synoptic evolution, meteorological impacts and some considerations with r.pdf:pdf},
isbn = {1561-8633},
issn = {1684-9981},
journal = {Natural Hazards and Earth System Science},
number = {2},
pages = {405--423},
title = {{The European storm Kyrill in January 2007: synoptic evolution, meteorological impacts and some considerations with respect to climate change}},
