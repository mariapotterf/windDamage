doi = {10.1007/s11625-010-0108-y},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Birkmann, von Teichman - 2010 - Integrating disaster risk reduction and climate change adaptation Key challenges-scales, knowledge, and.pdf:pdf},
isbn = {18624065},
