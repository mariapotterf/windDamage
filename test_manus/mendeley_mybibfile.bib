file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/K{\"{a}}{\"{a}}b - 2005 - Remote Sensing of Mountain Glaciers and Permafrost Creep.pdf:pdf},
