journal = {Environmental Pollution},
keywords = {Defoliation,Forest health,Pollution,Salvage cut,Slovakia},
month = {dec},
number = {3},
pages = {389--392},
publisher = {Elsevier},
title = {{Forest health and environmental pollution in Slovakia}},
