keywords = {Networks,Plant pathogens,Plant trade,Quarantine,Simulation},
pages = {14--28},
publisher = {Elsevier B.V.},
title = {{Effectiveness of dynamic quarantines against pathogen spread in models of the horticultural trade network}},
url = {http://dx.doi.org/10.1016/j.ecocom.2015.07.002},
volume = {24},
