file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Sedm{\'{a}}k et al. - 2020 - Optimizing the Tending of Forest Stands with Interactive Decision Maps to Balance the Financial Incomes and Ecolo.pdf:pdf},
