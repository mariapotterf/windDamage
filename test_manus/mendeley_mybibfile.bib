doi = {10.1111/j.1439-0418.2006.01123.x},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Dole{\v{z}}al, Sehnal - 2007 - Effects of photoperiod and temperature on the development and diapause of the bark beetle Ips typographus.pdf:pdf},
issn = {09312048},
