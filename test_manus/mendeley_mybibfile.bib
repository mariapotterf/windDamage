issn = {03014797},
journal = {Journal of Environmental Management},
keywords = {Biodiversity,Environmental changes,European forests,Forest management,Forest resistance,Risk,Temperate zone},
number = {1},
pages = {55--65},
title = {{Silvicultural management in maintaining biodiversity and resistance of forests in Europe - Temperate zone}},
volume = {67},
year = {2003}
}
