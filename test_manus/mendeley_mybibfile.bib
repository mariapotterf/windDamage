file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Gutsch et al. - 2018 - Environmental Research Letters Balancing trade-offs between ecosystem services in Germany's forests under climate.pdf:pdf},
journal = {Environ. Res. Lett},
keywords = {carbon sequestration,climate change impacts,ecosystem services,forest inventory data,forest model 4C,timber harvest,trade-off analysis},
pages = {45012},
title = {{Environmental Research Letters Balancing trade-offs between ecosystem services in Germany's forests under climate change Balancing trade-offs between ecosystem services in Germany's forests under climate change}},
url = {https://doi.org/10.1088/1748-9326/aab4e5},
