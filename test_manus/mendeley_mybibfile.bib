file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Lindgren, Raffa - 2013 - Evolution of tree killing in bark beetles (Coleoptera Curculionidae) Trade-offs between the maddening crowds an.pdf:pdf},
issn = {0008347X},
journal = {Canadian Entomologist},
number = {5},
pages = {471--495},
title = {{Evolution of tree killing in bark beetles (Coleoptera: Curculionidae): Trade-offs between the maddening crowds and a sticky situation}},
volume = {145},
