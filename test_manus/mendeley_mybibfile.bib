author = {Chape, Stuart and Blyth, Simon and Fish, Lucy and Fox, Phillip and Spalding, Mark},
file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Chape et al. - 2003 - 2003 United Nations List of Protected Areas.pdf:pdf},
