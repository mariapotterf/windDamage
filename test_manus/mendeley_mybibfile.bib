issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {Forest damage,Wind damage,Windthrow,Winter storm},
month = {dec},
pages = {17--28},
publisher = {Elsevier B.V.},
title = {{Forest susceptibility to storm damage is affected by similar factors regardless of storm type: Comparison of thunder storms and autumn extra-tropical cyclones in Finland}},
