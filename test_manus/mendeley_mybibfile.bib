journal = {Environmental Evidence},
keywords = {Fire,Functioning,Insect infestation,Management,Regeneration,Salvage harvesting,Windthrow},
pages = {16},
title = {{Does post-disturbance salvage logging affect the provision of ecosystem services? A systematic review protocol}},
url = {https://environmentalevidencejournal.biomedcentral.com/track/pdf/10.1186/s13750-015-0042-7},
volume = {4},
