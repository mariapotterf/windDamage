file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Paz{\'{u}}r, Bolliger - 2017 - Land changes in Slovakia Past processes and future directions.pdf:pdf},
issn = {01436228},
journal = {Applied Geography},
keywords = {EU,Future scenarios,Land use modelling,Landscape change,Socialism},
pages = {163--175},
publisher = {Elsevier Ltd},
title = {{Land changes in Slovakia: Past processes and future directions}},
