issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {Disaggregation,Downscaling,Europe,Forest productivity,Location factors,Spatial patterns},
pages = {228--238},
publisher = {Elsevier B.V.},
title = {{Mapping wood production in European forests}},
url = {http://dx.doi.org/10.1016/j.foreco.2015.08.007},
volume = {357},
year = {2015}
}
@article{Gallaun2010,
