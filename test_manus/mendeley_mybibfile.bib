file = {:/fileservices.ad.jyu.fi/homes/mpotterf/My Documents/Mendeley Desktop/Marini et al. - 2013 - Population dynamics of the spruce bark beetle a long-term study.pdf:pdf},
isbn = {0030-1299},
issn = {00301299},
