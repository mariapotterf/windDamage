journal = {Agricultural and Forest Meteorology},
keywords = {Agent-based model,Damage pattern,Damage propagation,Forest edge,Gust,Wind damage},
number = {March 2018},
pages = {279--288},
publisher = {Elsevier},
title = {{Agent-based modelling of wind damage processes and patterns in forests}},
url = {https://doi.org/10.1016/j.agrformet.2019.01.020},
